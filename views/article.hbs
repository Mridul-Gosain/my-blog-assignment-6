<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>{{post.title}}</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="/assets/img/blog.png" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="/assets/css/styles.css" rel="stylesheet" />
  </head>
  <body>
    <!-- Responsive navbar-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/">Blog</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        ><span class="navbar-toggler-icon"></span></button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            <li class="nav-item active"><a
                class="nav-link"
                href="/category/php"
              >Php</a></li>
            <li class="nav-item active"><a
                class="nav-link"
                href="/category/html"
              >Html</a></li>
            <li class="nav-item active"><a
                aria-current="page"
                class="nav-link"
                href="/category/javascript"
              >Javascript</a></li>
            <li class="nav-item active"><a
                class="nav-link"
                href="/category/jquery"
              >Jquery</a></li>
            <li class="nav-item active"><a
                class="nav-link"
                href="/category/css"
              >Css</a></li>
            <li class="nav-item active"><a
                class="nav-link"
                href="/category/bootstrap"
              >Bootstrap</a></li>
            <li class="nav-item active"><a
                class="nav-link"
                href="/category/laravel"
              >Laravel</a></li>

            {{#if user}}
              <li class="nav-item active">
                <a href="/admin/dashboard" class="nav-link">Dashboard</a>
              </li>
              <li class="nav-item active">
                <a href="/logout" class="nav-link">Logout</a>
              </li>
            {{else}}
              <li class="nav-item active">
                <a href="/login" class="nav-link">login</a>
              </li>
              <li class="nav-item active">
                <a href="/register" class="nav-link">Register</a>
              </li>
            {{/if}}
          </ul>
        </div>
      </div>
    </nav>

    <!-- Page content-->
    <div class="container mt-5">
      <div class="row">
        <div class="col-lg-12">
          <!-- Post content-->
          <article>
            <!-- Post header-->
            <header class="mb-4">
              <!-- Post title-->
              <h1 class="fw-bolder mb-1">{{post.title}}</h1>
              <!-- Post meta content-->
              <div class="text-muted fst-italic mb-2">Posted on
                {{formatDate post.date}}
                by
                {{propername
                  post.author.first_name
                  post.author.last_name
                }}</div>
              <!-- Post categories-->
              <a
                class="badge bg-secondary text-decoration-none link-light"
                href="/category/{{post.category}}"
              >{{post.category}}</a>
            </header>
            <!-- Preview image figure-->
            <figure class=""><img
                width="700px"
                class="img"
                src="{{post.image}}"
                alt="..."
              /></figure>
            <!-- Post content-->
            <section class="mb-5" id="content">
              {{post.content}}
            </section>
          </article>
          <!-- Comments section-->

        </div>
        <!-- Side widgets-->

      </div>
    </div>
    <!-- Footer-->
    <footer class="py-5 bg-dark">
      <div class="container"><p class="m-0 text-center text-white">Copyright Â©
          Your Website 2022</p></div>
    </footer>
    <!-- Bootstrap core JS-->
    <script
      src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    ></script>
    <!-- Core theme JS-->
    <script>
      $('#content').html($('#content').text());
    </script>

  </body></html>